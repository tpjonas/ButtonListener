<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cimdata.android.dez2017.buttonlistener.MainActivity">

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_output">

        <Button
            android:id="@+id/btn_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Button Listener - XML"
            android:layout_weight="100"
            android:onClick="onXMLButtonClick"
        />

        <Button
            android:id="@+id/btn_02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Button Listener - Anonym"
            android:layout_weight="100"
            />

        <Button
            android:id="@+id/btn_03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Button Listener - Activity 2"
            android:layout_weight="100"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
